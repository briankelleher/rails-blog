<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>


<p>
  <strong>Posts:</strong>
  <% if @posts.length > 0 %>
    <% @posts.each do |p| %>
      <%= link_to p.title, p %><br>
    <% end %>
  <% else %>
    No Posts.
  <% end %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
